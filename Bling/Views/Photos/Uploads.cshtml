@model IEnumerable<ProofOfConcept.Models.Photos>

<br />
<p>
    @Html.ActionLink("Upload New", "Upload")
</p>
@foreach (var item in Model)
{
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6 text-center" style="padding:10px 10px 10px 10px;height:20%" id="@item.PhotoID">
        <div class="col-lg-12 col-md-12 col-sm-12 thumbnail img-responsive text-center">
            <img src="@item.PhotoPath" style="width:inherit" />
        </div>
        <div id="stats">
            <span>@Html.DisplayFor(modelItem => item.Loves)</span>
            @{ var UserId = ViewBag.UserId.ToString();
        if (item.LovedBy.IndexOf("," + UserId + ",") > -1)
        {
            <span class="glyphicon glyphicon-heart" style="color:hotpink"></span>
        } else{
        <span class="glyphicon glyphicon-heart-empty" style="color:hotpink"></span>}
            }|
        <span>@Html.DisplayFor(modelItem => item.Likes)</span>
            @{ if (item.LikedBy.IndexOf("," + UserId + ",") > -1)
        {
            <span class="glyphicon glyphicon-thumbs-up" style="color:green;font-weight:bold"></span>
         }
        else
           {
        <span class="glyphicon glyphicon-thumbs-up" id="@item.PhotoID"></span>}
            }|
        <span>@Html.DisplayFor(modelItem => item.Dislikes)</span>
        @{ /**/
                   if (item.DisLikedBy.IndexOf("," + UserId + ",") > -1)
                    {
                        <span class="glyphicon glyphicon-thumbs-down" style="color:red;font-weight:bold"></span>}
            else
            {
                <span class="glyphicon glyphicon-thumbs-down"></span>}
        }
        </div>
    </div>
    @*@Html.Label(item.DOU.ToString("dd MMM, yyyy"), htmlAttributes: new { style = "font-weight:normal" })
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.PhotoID }) |
            @Html.ActionLink("Details", "Details", new { id = item.PhotoID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.PhotoID })
        </td>
        </tr>*@
}

<script src="~/Scripts/Uploads.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
}

<link href="~/Content/ImagePreview.css" rel="stylesheet" />