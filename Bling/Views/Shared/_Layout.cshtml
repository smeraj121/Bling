<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Layout.css" rel="stylesheet" />
    <script src="~/Scripts/Layout.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" style="float:left !important;color:white" onclick="openNav()" >
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*<span style="font-size:30px;cursor:pointer;float:left;color:white" onclick="openNav()">&#9776;</span>*@
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" style="padding:0 0 0 3px">
                    <span class="test"></span>                    
                </button>
                @Html.ActionLink("Profiler", "Home", "Content", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="float:right">
                    <li>@Html.ActionLink("Settings","Settings","User")</li>
                    <li>@Html.ActionLink("Change Password", "Index", "Home")</li>
                    <li>@Html.ActionLink("Sign Out", "SignOut", "User")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content col-lg-12 col-md-12 col-sm-12">
        <div id="mySidenav" class="sidenav col-lg-3 col-sm-3 col-md-3">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <div class="name">
                @{var profilepic = Session["profilePic"] ?? "https://res.cloudinary.com/blinging/image/upload/w_200/defaultuser.png"; }
                <img src="@profilepic" class="profilepic" />
                <p class="">Hello, @Session["Username"]</p>
            </div>
            @Html.ActionLink("Home", "HomePage", "Content")
            @Html.ActionLink("My Profile", "MyProfile", "Content")
            @Html.ActionLink("Uploads", "Uploads", "Photos")
            @Html.ActionLink("Popular", "Popular", "Populars")
        </div>
        <div class="sidenavspace col-sm-4 col-md-3 col-lg-2 " style="height:100vh">
        </div>
        <div class="body col-md-8 col-lg-8 col-sm-8" style="padding:0 0 0s 50px">
            <div class="searchform">
                <form action="@Url.Action("SearchResults","Present")" method="get">
                    <input type="text" placeholder="Search" value="" name="keyword" style="max-width:80%"/>
                    <button type="submit" name="searchbtn" value=""><span class="glyphicon glyphicon-search"></span></button>
                </form>
            </div>
            <br />
            <div>
            @RenderBody()
            </div>
            <footer style="margin:0 10vh 0 10vh">
                <hr />
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </footer>
        </div>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
